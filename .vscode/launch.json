{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Backend (API)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Backend",
      "program": "${workspaceFolder}/backend/HRAssistant/bin/Debug/net9.0/HRAssistant.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/HRAssistant",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Attach to Backend",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}